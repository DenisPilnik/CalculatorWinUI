<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CalculatorWinUI.View.StandartCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculatorWinUI.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Стиль кнопок калькулятора -->
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="60"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Вивід -->
        <TextBox x:Name="Display"
                 Height="80"
                 Margin="10"
                 FontSize="36"
                 TextAlignment="Right"
                 IsReadOnly="True"/>

        <!-- Сітка кнопок -->
        <Grid Grid.Row="1" Margin="5" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки з єдиним стилем -->
            <Button Content="7" Grid.Row="0" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="8" Grid.Row="0" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="9" Grid.Row="0" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="/" Grid.Row="0" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" />

            <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="*" Grid.Row="1" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" />

            <Button Content="1" Grid.Row="2" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="2" Grid.Row="2" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="3" Grid.Row="2" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="-" Grid.Row="2" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" />

            <Button Content="0" Grid.Row="3" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="." Grid.Row="3" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="=" Grid.Row="3" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" />
            <Button Content="+" Grid.Row="3" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" />

            <Button Content="C" Grid.Row="4" Grid.ColumnSpan="4" Style="{StaticResource CalcButtonStyle}"
                    Background="LightCoral" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Page>
